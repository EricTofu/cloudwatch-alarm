# Staging Environment Configuration
ENV = "stg"

# AWS Configuration
aws_region = "us-east-1"

# Email notifications by severity
alarm_emails = {
  critical = ["staging-oncall@example.com"]
  warning  = ["staging-team@example.com"]
  info     = []
}

# Optional: Use existing SNS topics instead of creating new ones
# sns_topic_arns = {
#   critical = "arn:aws:sns:us-east-1:123456789012:existing-critical-topic"
# }

# EC2 Instances (Staging)
ec2_instances = {
  "i-stg-web-server" = {}
  "i-stg-app-server" = {
    cpu_threshold = 80
  }
}

# Auto Scaling Groups (Staging)
auto_scaling_groups = {
  "stg-app-asg" = {
    project            = "app"
    severity           = "warning"
    cpu_threshold      = 75
    memory_threshold   = 80
    disk_threshold     = 85
  }
}

# RDS Instances (Staging)
rds_instances = {
  "staging-database" = {
    connections_threshold = 85
  }
}

# Lambda Functions (Staging)
lambda_functions = {
  "stg-api-handler" = {}
}

# ALBs (Staging)
albs = {}

# Target Groups (Staging)
target_groups = {}

# API Gateways (Staging)
api_gateways = {}

# S3 Buckets (Staging)
s3_buckets = {}

# Tags
tags = {
  Project     = "CloudWatch-Monitoring"
  Environment = "staging"
  Team        = "DevOps"
}
