# Development Environment Configuration

# AWS Configuration
aws_region = "us-east-1"

# Email notifications by severity
alarm_emails = {
  critical = ["dev-oncall@example.com"]
  warning  = ["dev-team@example.com"]
  info     = []
}

# Optional: Use existing SNS topics instead of creating new ones
# sns_topic_arns = {
#   critical = "arn:aws:sns:us-east-1:123456789012:existing-critical-topic"
# }

# EC2 Instances (Development)
ec2_instances = {
  "i-dev-web-server" = {}
  "i-dev-app-server" = {
    cpu_threshold = 85
  }
}

# Auto Scaling Groups (Development)
auto_scaling_groups = {
  "dev-app-asg" = {
    project            = "app"
    severity           = "warning"
    cpu_threshold      = 80
    memory_threshold   = 85
    disk_threshold     = 90
  }
}

# RDS Instances (Development)
rds_instances = {
  "dev-database" = {}
}

# Lambda Functions (Development)
lambda_functions = {
  "dev-api-handler" = {}
}

# ALBs (Development)
albs = {}

# Target Groups (Development)
target_groups = {}

# API Gateways (Development)
api_gateways = {}

# S3 Buckets (Development)
s3_buckets = {}

# Tags
tags = {
  Project     = "CloudWatch-Monitoring"
  Environment = "dev"
  Team        = "DevOps"
}
