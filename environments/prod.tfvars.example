# Production Environment Configuration

# Global project name (optional, can be overridden per-resource)
project = ""

# AWS Configuration
aws_region = "us-east-1"

# Email notifications by severity
alarm_emails = {
  critical = ["pagerduty@example.com", "prod-oncall@example.com"]
  warning  = ["prod-team@example.com"]
  info     = []
}

# Optional: Use existing SNS topics instead of creating new ones
# sns_topic_arns = {
#   critical = "arn:aws:sns:us-east-1:123456789012:existing-critical-topic"
# }

# EC2 Instances (Production)
ec2_instances = {
  # API Project instances
  "i-api-web-1" = {
    project = "api"
  }
  "i-api-web-2" = {
    project = "api"
    cpu_threshold = 85
  }
  
  # Web Project instances
  "i-web-frontend-1" = {
    project = "web"
    cpu_threshold = 75
  }
  "i-web-frontend-2" = {
    project = "web"
    cpu_threshold = 75
  }
  
  # Shared infrastructure (no project)
  }
}

# Auto Scaling Groups (Production)
auto_scaling_groups = {
  "prod-app-asg" = {
    project            = "app"
    severity           = "critical"
    cpu_threshold      = 70
    memory_threshold   = 75
    disk_threshold     = 80
    network_in_threshold = 500000000
  }
}

# RDS Instances (Production)
rds_instances = {
  "production-database" = {
    connections_threshold = 90
    read_latency_threshold = 0.015
  }
}

# Lambda Functions (Production)
lambda_functions = {
  "prod-api-handler" = {}
  "prod-data-processor" = {
    duration_threshold = 120000
  }
}

# ALBs (Production)
albs = {
  "production-alb" = {}
}

# Target Groups (Production)
target_groups = {
  "prod-api-tg" = {}
}

# API Gateways (Production)
api_gateways = {}

# S3 Buckets (Production)
s3_buckets = {}

# Tags
tags = {
  Project     = "CloudWatch-Monitoring"
  Environment = "production"
  Team        = "DevOps"
  CostCenter  = "Engineering"
}
